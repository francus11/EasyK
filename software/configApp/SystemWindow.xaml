<Window x:Class="configApp.SystemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:configApp"
        mc:Ignorable="d"
        Title="System action" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid x:Name="AutoCaptureTab"/>
        <Grid x:Name="ManualCaptureTab">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid VerticalAlignment="Bottom" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="KeysComboBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" SelectedValue="{Binding SystemCode, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=Window}}"/>
            </Grid>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="1" Margin="0,10,0,0" >
                <StackPanel.Resources>
                    <Style TargetType="RadioButton">
                        <Setter Property="Margin" Value="5,0,5,0"/>
                    </Style>
                </StackPanel.Resources>
                <RadioButton x:Name="PressRadioButton" GroupName="ClickTypeGroup" Content="Press" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
                <RadioButton x:Name="ReleaseRadioButton" GroupName="ClickTypeGroup" Content="Release" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
                <RadioButton x:Name="ClickRadioButton" GroupName="ClickTypeGroup" Content="Click" HorizontalAlignment="Left" VerticalAlignment="Top"  Checked="RadioButton_Checked"/>
            </StackPanel>
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center">
            <Button x:Name="OKButton" Content="OK" Width="75" Margin="5" Click="OkButton_Click" />
            <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
