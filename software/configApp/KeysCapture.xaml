<Window x:Class="configApp.KeysCapture"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Key Combination Detector" Height="200" Width="400"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <TextBlock x:Name="KeyCombinationText" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click" />
                <Button Content="OK" Width="75" Margin="5" Click="OkButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>