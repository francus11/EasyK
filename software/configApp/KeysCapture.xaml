<Window x:Class="configApp.KeysCapture"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Key Combination" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Auto"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="TabButton_Click"
            Tag="Auto"
            Grid.Column="0" />

            <Button Content="Manual"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="TabButton_Click"
            Tag="Manual"
            Grid.Column="1" />
        </Grid>
        <Grid x:Name="AutoCaptureTab" Grid.Row="1">
            <TextBlock x:Name="KeyCombinationText" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Center" Text="Click keys" />
        </Grid>
        <Grid x:Name="ManualCaptureTab" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid VerticalAlignment="Bottom" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="KeysComboBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" SelectedValue="{Binding CapturedKey, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=Window}}"/>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1">
                    <StackPanel.Resources>
                        <Style TargetType="CheckBox">
                            <Setter Property="Margin" Value="5,0,5,0"/>
                        </Style>
                    </StackPanel.Resources>
                    <CheckBox x:Name="ControlCheckBox" Content="Ctrl" HorizontalAlignment="Left" VerticalAlignment="Top" Tag="Control" Checked="ControlCheckBox_Checked" Unchecked="ControlCheckBox_Unchecked"/>
                    <CheckBox x:Name="ShiftCheckBox" Content="Shift" HorizontalAlignment="Left" VerticalAlignment="Top" Tag="Shift" Checked="ControlCheckBox_Checked" Unchecked="ControlCheckBox_Unchecked"/>
                    <CheckBox x:Name="AltCheckBox" Content="Alt" HorizontalAlignment="Left" VerticalAlignment="Top" Tag="Alt" Checked="ControlCheckBox_Checked" Unchecked="ControlCheckBox_Unchecked"/>
                    <CheckBox x:Name="WindowsCheckBox" Content="Win" HorizontalAlignment="Left" VerticalAlignment="Top" Tag="Windows" Checked="ControlCheckBox_Checked" Unchecked="ControlCheckBox_Unchecked"/>
                </StackPanel>
            </Grid>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="1" Margin="0,10,0,0" >
                <StackPanel.Resources>
                    <Style TargetType="RadioButton">
                        <Setter Property="Margin" Value="5,0,5,0"/>
                    </Style>
                </StackPanel.Resources>
                <RadioButton x:Name="PressRadioButton" GroupName="ClickTypeGroup" Content="Press" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
                <RadioButton x:Name="ReleaseRadioButton" GroupName="ClickTypeGroup" Content="Release" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
                <RadioButton x:Name="ClickRadioButton" GroupName="ClickTypeGroup" Content="Click" HorizontalAlignment="Left" VerticalAlignment="Top"  Checked="RadioButton_Checked"/>
            </StackPanel>
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center">
            <Button x:Name="OKButton" Content="OK" Width="75" Margin="5" Click="OkButton_Click" />
            <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>