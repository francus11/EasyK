<Window x:Class="configApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:configApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="869*"/>
            <ColumnDefinition Width="411*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Canvas Margin="224,190,225,142" Width="420" Height="420">
            <Ellipse HorizontalAlignment="Left" Height="100" Stroke="Black" VerticalAlignment="Top" Width="100" Canvas.Left="320" Canvas.Top="-100"/>

            <Grid Height="420" Width="420">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Rectangle HorizontalAlignment="Center" Height="75" Stroke="Black" VerticalAlignment="Center" Width="75"/>
                <Rectangle HorizontalAlignment="Center" Height="75" Stroke="Black" VerticalAlignment="Center" Width="75" Grid.Column="1"/>
                <Rectangle HorizontalAlignment="Center" Height="75" Stroke="Black" VerticalAlignment="Center" Width="75" Grid.Column="2"/>
                <Rectangle HorizontalAlignment="Center" Height="75" Stroke="Black" VerticalAlignment="Center" Width="75" Grid.Column="3"/>
                <Rectangle HorizontalAlignment="Center" Height="75" Stroke="Black" VerticalAlignment="Center" Width="75" Grid.Row="1"/>
                <Rectangle HorizontalAlignment="Center" Height="75" Stroke="Black" VerticalAlignment="Center" Width="75" Grid.Column="1" Grid.Row="1"/>
                <Rectangle HorizontalAlignment="Center" Height="75" Stroke="Black" VerticalAlignment="Center" Width="75" Grid.Column="2" Grid.Row="1"/>
                <Rectangle HorizontalAlignment="Center" Height="75" Stroke="Black" VerticalAlignment="Center" Width="75" Grid.Column="3" Grid.Row="1"/>
                <Rectangle HorizontalAlignment="Center" Height="75" Stroke="Black" VerticalAlignment="Center" Width="75" Grid.Row="2"/>
                <Rectangle HorizontalAlignment="Center" Height="75" Stroke="Black" VerticalAlignment="Center" Width="75" Grid.Column="1" Grid.Row="2"/>
                <Rectangle HorizontalAlignment="Center" Height="75" Stroke="Black" VerticalAlignment="Center" Width="75" Grid.Column="2" Grid.Row="2"/>
                <Rectangle HorizontalAlignment="Center" Height="75" Stroke="Black" VerticalAlignment="Center" Width="75" Grid.Column="3" Grid.Row="2"/>
                <Rectangle HorizontalAlignment="Center" Height="75" Stroke="Black" VerticalAlignment="Center" Width="75" Grid.Row="4"/>
                <Rectangle HorizontalAlignment="Center" Height="75" Stroke="Black" VerticalAlignment="Center" Width="75" Grid.Column="1" Grid.Row="4"/>
                <Rectangle HorizontalAlignment="Center" Height="75" Stroke="Black" VerticalAlignment="Center" Width="75" Grid.Column="2" Grid.Row="4"/>
                <Rectangle HorizontalAlignment="Center" Height="75" Stroke="Black" VerticalAlignment="Center" Width="75" Grid.Column="3" Grid.Row="4"/>
            </Grid>
        </Canvas>
        <Canvas x:Name="SelectedElementConfig" Grid.Column="1" Visibility="Hidden">
            <Grid Height="704" Width="411">
                <Grid.RowDefinitions>
                    <RowDefinition Height="643*"/>
                    <RowDefinition Height="61*"/>
                </Grid.RowDefinitions>
                <Button Content="Save" Width="40" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="1" Margin="0,0,30,0"/>
            </Grid>
        </Canvas>
        <Canvas x:Name="NotSelectedElementConfig" Grid.Column="1">
            <Grid Height="704" Width="411">
                <Label Content="Select element on the left to configure its action" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Canvas>

    </Grid>
</Window>
